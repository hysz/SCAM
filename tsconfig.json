{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["es2017", "dom"],
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "noImplicitReturns": true,
        "pretty": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@0x/typescript-typings/types", "node_modules/@types"],
        "strict": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "lib",
        "rootDir": ".",
        "resolveJsonModule": true
    },
    "exclude": ["./contracts/extensions/**/*"],
    "include": ["./src/**/*", "./test/**/*", "./generated-wrappers/**/*", "./migrations/**/*"],
    "files": [
        "generated-artifacts/Scam.json",
        "generated-artifacts/UnitTestScam.json",
        "test/generated-artifacts/IERC20.json",
        "test/generated-artifacts/IEvents.json",
        "test/generated-artifacts/IStructs.json",
        "test/generated-artifacts/LibAMM.json",
        "test/generated-artifacts/LibBondingCurve.json",
        "test/generated-artifacts/LibFixedMath.json",
        "test/generated-artifacts/LibRootFinding.json",
        "test/generated-artifacts/LibSafeMath.json",
        "test/generated-artifacts/LibToken.json",
        "test/generated-artifacts/Liquidity.json",
        "test/generated-artifacts/Ownable.json",
        "test/generated-artifacts/Scam.json",
        "test/generated-artifacts/State.json",
        "test/generated-artifacts/Swapper.json",
        "test/generated-artifacts/TestScam.json",
        "test/generated-artifacts/UnitTestScam.json"
    ]
}
